@using VendorTracker.Models;

<h1>Current Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendor/@vendor.Id'>@vendor.VendorName</a></h3>
  <h5>@vendor.VendorName</h5>
}
<a href='/vendor/new'>Add a new vendor</a>
<p><a href='/'>Back home</a></p>